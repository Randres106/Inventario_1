@model Inventario_1.Models.Producto

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Esta seguro de eliminar el producto?</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteCofirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control"  readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control"readonly />
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Cant_Productos" class="control-label"></label>
                <input asp-for="Cant_Productos" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <input type="submit" value="Elimiar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Lista_Cliente">Regresar</a>
</div>
